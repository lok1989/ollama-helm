DROP TABLE HC_BATCH_JOB_EXECUTION CASCADE CONSTRAINTS;
DROP TABLE HC_BATCH_JOB_INSTANCE CASCADE CONSTRAINTS;

-- Drop sequences
DROP SEQUENCE HC_BATCH_STEP_EXECUTION_SEQ;
DROP SEQUENCE HC_BATCH_JOB_EXECUTION_SEQ;
DROP SEQUENCE HC_BATCH_JOB_SEQ;



